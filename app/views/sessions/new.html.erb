<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg border border-gray-300 grid grid-cols-1 gap-4">
    <h1 class="text-2xl font-semibold text-center mb-6">Log in</h1>

    <%= form_with model: @user, url: session_path, class: "space-y-4" do |form| %>
      <div class="mb-4">
        <%= form.label :email, class: "block text-sm font-semibold text-gray-700" %>
        <%= form.email_field :email, class: "w-full p-2 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= form.label :password, class: "block text-sm font-semibold text-gray-700" %>
        <%= form.password_field :password, class: "w-full p-2 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= form.submit "Log in", class: "w-full py-2 bg-blue-500 text-black font-semibold rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

    <% end %>

    <div class="text-center mt-4">
      <%= link_to "Forgot your password?", new_password_reset_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
