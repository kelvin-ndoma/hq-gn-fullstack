<% if current_page?(edit_dashboard_profile_path) %>
  <!-- Full-page container for the profile update form -->
  <div style="width: 100%; height: 100vh; display: flex; justify-content: center; align-items: center; background-color: #f4f4f4;">
    <!-- Form container -->
    <div style="background-color: white; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); width: 400px;">
      <h1 style="text-align: center; color: #333;">Edit Profile</h1>

      <!-- Rails Form -->
      <%= form_with model: @user, url: dashboard_profile_path do |form| %>
        <!-- Error Messages -->
        <% if form.object.errors.any? %>
          <div style="background-color: #ffcccc; padding: 10px; margin-bottom: 15px; border-radius: 5px; color: #b33c3c;">
            <% form.object.errors.full_messages.each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>
        <% end %>

        <!-- First Name -->
        <div style="margin-bottom: 15px;">
          <%= form.label :first_name, "First Name", style: "display: block; font-weight: bold;" %>
          <%= form.text_field :first_name, style: "width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" %>
        </div>

        <!-- Last Name -->
        <div style="margin-bottom: 15px;">
          <%= form.label :last_name, "Last Name", style: "display: block; font-weight: bold;" %>
          <%= form.text_field :last_name, style: "width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" %>
        </div>

        <!-- Bio -->
        <div style="margin-bottom: 15px;">
          <%= form.label :bio, "Bio", style: "display: block; font-weight: bold;" %>
          <%= form.text_area :bio, style: "width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" %>
        </div>

        <!-- City -->
        <div style="margin-bottom: 15px;">
          <%= form.label :city, "City", style: "display: block; font-weight: bold;" %>
          <%= form.text_field :city, style: "width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" %>
        </div>

        <!-- Country -->
        <div style="margin-bottom: 15px;">
          <%= form.label :country, "Country", style: "display: block; font-weight: bold;" %>
          <%= form.text_field :country, style: "width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc;" %>
        </div>

        <!-- Submit Button -->
        <div style="text-align: center;">
          <%= form.submit "Update Profile", style: "background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
