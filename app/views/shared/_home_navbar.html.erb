<header class="flex py-4 px-4 sm:px-10 font-sans min-h-[70px] relative">
<div class="flex flex-wrap items-center justify-between gap-5 w-full">
  <%= link_to root_path do %>
    <%= image_tag 'main.png', alt: 'HQ Global', class: 'h-8' %>
  <% end %>

  <div class="flex max-lg:ml-auto mt-4 space-x-4">
    <%= link_to new_session_path, 
        class: 'px-4 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-all duration-300' do %>
      Login
    <% end %>

    <%= link_to new_registration_path, 
        class: 'px-4 py-2 text-sm text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-all duration-300' do %>
      Sign up
    <% end %>
  </div>
</div>
</header>
