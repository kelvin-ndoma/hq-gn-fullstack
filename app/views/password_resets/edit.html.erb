<header>
  <!-- Navbar Content (fixed) -->
</header>

<div class="content-wrapper">
  <h1 style="font-size: 2rem; font-weight: bold; margin-bottom: 16px;">Reset your Password</h1>

  <%= form_with model: @user, url: password_reset_path(token: params[:token]), class: "profile-form" do |form| %>
    <%= hidden_field_tag :token, params[:token] %>

    <div>
      <%= form.label :password, style: "display: block; font-size: 0.875rem; font-weight: 500; color: #4b5563;" %>
      <%= form.password_field :password, style: "margin-top: 4px; padding: 8px; border-radius: 0.375rem; border: 1px solid #d1d5db; box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 3px; outline: none; font-size: 1rem; width: 100%; focus:ring: 2px solid #6366f1;" %>
    </div>

    <div>
      <%= form.label :password_confirmation, style: "display: block; font-size: 0.875rem; font-weight: 500; color: #4b5563;" %>
      <%= form.password_field :password_confirmation, style: "margin-top: 4px; padding: 8px; border-radius: 0.375rem; border: 1px solid #d1d5db; box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 3px; outline: none; font-size: 1rem; width: 100%; focus:ring: 2px solid #6366f1;" %>
    </div>

    <div>
      <%= form.submit "Reset Password", style: "background-color: #3b82f6; color: white; font-weight: bold; padding: 8px 16px; border-radius: 0.375rem; cursor: pointer; font-size: 1rem; transition: background-color 0.3s ease;" %>
    </div>
  <% end %>
</div>
