<h1>Reset your Password</h1>

<%= form_with scope: :user, url: password_reset_path do |form| %>
    <div>
      <%= form.label :email, "Email Address" %>
      <%= form.email_field :email, required: true, autofocus: true %>
    </div>
    <div>
      <%= form.submit "Reset Password" %>
    </div>
  <% end %>
  